    save(sol, "$(TW)-2pi1piRe$(Re)-$J-$K-$L-sol.asc")
    save_sigma(cx, cz, 10, "$(TW)-2pi1piRe$(Re)-$J-$K-$L-sol-sigma.asc")
end


